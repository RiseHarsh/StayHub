<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>My Profile - StayHub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #f8f9fa;
    }

    .card {
      border: none;
      border-radius: 16px;
    }

    .profile-header {
      background: linear-gradient(135deg, #4e73df, #224abe);
      color: white;
      border-radius: 16px 16px 0 0;
      padding: 35px;
    }

    .profile-img {
      width: 115px;
      height: 115px;
      object-fit: cover;
      border-radius: 50%;
      border: 4px solid #fff;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
      transition: 0.3s;
    }

    .camera-btn {
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      font-size: 14px;
    }

    .section-title {
      font-weight: 600;
      margin-bottom: 1.2rem;
    }

    .section-divider {
      margin: 2rem 0;
      opacity: 0.1;
    }

    .list-group-item {
      border: none;
      border-radius: 12px;
      margin-bottom: 10px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }

    .btn {
      border-radius: 8px;
    }

    .form-control {
      border-radius: 8px;
    }

    #delete-btn:hover {
      background-color: red !important;
    }
  </style>
</head>

<body>

  <div class="container my-5">
    <div class="row">
      <div class="col-lg-9 col-xl-8 mx-auto">

        <div class="card shadow-sm">

          <!-- ================= PROFILE HEADER ================= -->
          <div class="profile-header d-flex align-items-center">

            <div class="position-relative me-4">
              <img src="<%= user.photoURL || '/images/default-image.png' %>" class="profile-img" id="profilePreview">

              <!-- Camera Edit Button -->
              <label for="photoInput" class="btn btn-light camera-btn position-absolute bottom-0 end-0 shadow">
                <i class="bi bi-camera"></i>
              </label>

              <input type="file" id="photoInput" accept="image/*" hidden>
            </div>

            <div>
              <h4 class="mb-1">
                <%= user.name || "User" %>
              </h4>
              <p class="mb-1">
                <%= user.email %>
              </p>
              <small>
                Joined:
                <%= user.createdAt ? user.createdAt.toDate().toLocaleDateString('en-US', { year: 'numeric' ,
                  month: 'long' , day: 'numeric' }) : "N/A" %>
              </small>
            </div>

          </div>

          <div class="card-body p-4">

            <!-- ================= BASIC INFO ================= -->
            <h5 class="section-title">Basic Information</h5>

            <form action="/profile/update" method="POST" class="needs-validation" novalidate>
              <div class="row g-3">
                
                <!-- Full Name -->
                <div class="col-md-6">
                  <label class="form-label" for="name">Full Name</label>
                  <input type="text" name="name" id="name" class="form-control" value="<%= user.name || '' %>" required>
                  <div class="invalid-feedback">
                    Please enter your full name.
                  </div>
                </div>
            
                <!-- Phone -->
                <div class="col-md-6">
                  <label class="form-label" for="phone">Phone</label>
                  <input type="text" name="phone" id="phone" class="form-control" value="<%= user.phone || '' %>" required pattern="^\+?\d{7,15}$">
                  <div class="invalid-feedback">
                    Please enter a valid phone number.
                  </div>
                </div>
            
                <!-- About / Bio -->
                <div class="col-12">
                  <label class="form-label" for="bio">About</label>
                  <textarea name="bio" id="bio" class="form-control" rows="3" required><%= user.bio || '' %></textarea>
                  <div class="invalid-feedback">
                    Please write something about yourself.
                  </div>
                </div>
            
                <!-- Submit -->
                <div class="col-12 text-end mt-2">
                  <button class="btn btn-primary px-4" type="submit">
                    <i class="bi bi-save me-1"></i> Save Changes
                  </button>
                </div>
            
              </div>
            </form>

            <hr class="section-divider">

            <!-- ================= SECURITY ================= -->
            <h5 class="section-title">Security Settings</h5>

            <div class="d-flex flex-wrap gap-3">
              <a href="/profile/change-password" class="btn btn-outline-primary">
                <i class="bi bi-key me-1"></i> Change Password
              </a>

              <button id="logout-btn" class="btn btn-outline-secondary">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
              </button>

              <button id="delete-btn" class="btn btn-outline-danger">
                <i class="bi bi-trash me-1"></i> Delete Account
              </button>
            </div>

            <hr class="section-divider">

            <!-- ================= WISHLIST ================= -->
            <h5 class="section-title">Wishlist</h5>

            <div class="d-flex justify-content-between align-items-center">
              <p class="mb-0">
                You have
                <strong>
                  <%= Array.isArray(user.wishlist) ? user.wishlist.length : 0 %>
                </strong>
                saved properties.
              </p>

              <a href="/profile/wishlist" class="btn btn-sm btn-primary px-3">
                View Wishlist
              </a>
            </div>

            <hr class="section-divider">

            <!-- ================= BOOKINGS ================= -->
            <h5 class="section-title">My Bookings</h5>

            <% if (bookings && bookings.length> 0) { %>
              <div class="list-group">
                <% bookings.forEach(booking=> { %>
                  <div class="list-group-item p-3">
                    <div class="d-flex justify-content-between">
                      <div>
                        <strong>
                          <%= booking.propertyName %>
                        </strong><br>
                        <small class="text-muted">
                          <%= new Date(booking.checkIn).toDateString() %> -
                            <%= new Date(booking.checkOut).toDateString() %>
                        </small>
                      </div>
                      <span class="badge bg-success px-3 py-2">
                        <%= booking.status %>
                      </span>
                    </div>
                  </div>
                  <% }) %>
              </div>
              <% } else { %>
                <p class="text-muted">No bookings yet.</p>
                <% } %>

                  <!-- <div class="d-flex gap-5">
                    <div class="form-check form-switch"> <input class="form-check-input" type="checkbox" id="emailNotif"
                        checked> <label class="form-check-label">Email Notifications</label> </div>
                    <div class="form-check form-switch"> <input class="form-check-input" type="checkbox" id="darkMode">
                      <label class="form-check-label">Dark Mode</label> </div>
                  </div> -->
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <!-- ================= SCRIPTS ================= -->
  <script type="module">
    import { auth, storage } from '/js/firebase.js';
    import { deleteUser } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js";
    import { ref, uploadBytes, getDownloadURL }
      from "https://www.gstatic.com/firebasejs/9.23.0/firebase-storage.js";

    const photoInput = document.getElementById("photoInput");
    const preview = document.getElementById("profilePreview");

    // Bootstrap 5 validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');

    Array.from(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();

    // Upload Profile Photo
    photoInput.addEventListener("change", async (e) => {
      const file = e.target.files[0];
      if (!file) return;

      const user = auth.currentUser;
      if (!user) return alert("Not authenticated");

      try {
        const storageRef = ref(storage, `profileImages/${user.uid}`);
        await uploadBytes(storageRef, file);
        const downloadURL = await getDownloadURL(storageRef);

        preview.src = downloadURL;

        await fetch("/profile/update-photo", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ photoURL: downloadURL })
        });

        alert("Profile photo updated âœ…");

      } catch (error) {
        console.error(error);
        alert("Upload failed");
      }
    });

    // Logout
    document.getElementById('logout-btn').addEventListener('click', async () => {
      await fetch('/logout');
      window.location.href = '/';
    });

    // Delete Account
    document.getElementById('delete-btn').addEventListener('click', async () => {
      if (!confirm('Are you sure? This cannot be undone.')) return;

      await fetch('/profile/delete', { method: 'DELETE' });

      const user = auth.currentUser;
      if (user) {
        await deleteUser(user);
      }

      window.location.href = '/';
    });

  </script>

</body>

</html>