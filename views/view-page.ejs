<div class="container mt-5">
    <div class="row">
        <!-- Property Image -->
        <div class="col-md-6">
            <img src="<%= listing.image.url %>" class="img-fluid rounded shadow" alt="<%= listing.title %>">
        </div>

        <!-- Property Details -->
        <div class="col-md-6">
            <h2 class="fw-bold">
                <%= listing.title %>
            </h2>
            <!-- <p class="text-muted mb-1">Property ID: <%= listing.id %>
            </p> -->
            <h4 class="text-primary">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</h4>
            <p class="mt-3">
                <%= listing.description %>
            </p>

            <!-- Additional Details (if you have) -->
            <% if (listing.amenities) { %>
                <h5 class="mt-4">Amenities:</h5>
                <ul>
                    <% listing.amenities.forEach(amenity=> { %>
                        <li>
                            <%= amenity %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <a href="#" class="btn btn-success btn-lg mt-4">Book Now</a>
        </div>
    </div>

    <!-- Optional: Back Button -->
    <div class="mt-5">
        <a href="/" class="btn btn-outline-secondary">‚Üê Back to Listings</a>
    </div>
</div>